{namespace GuestbookView}

/**
 * Prints the portlet main view.
 */
{template .render}
    {@param id: string}
    {@param guestbooks: list<[
    guestbookId: number,
    name: string
    ]>}
    {@param editUrl: any}
    {@param newUrl: string}
    {@param portletNamespace: string}

    <div id="{$id}">

        <h1>Guestbooks</h1>

        <div id="notifications"></div>

        <div>
            <a class="btn btn-default" href="{$newUrl}">
                <i class="icon-plus"></i>{sp}New Guestbook</a>
        </div>

        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th class="text-center" style="width: 250px;">Ações</th>
            </tr>
            </thead>
            <tbody>
                {foreach $guestbook in $guestbooks}
                <tr>
                    <td>
                        {$guestbook.name}
                    </td>
                    <td class="text-right" style="width: 250px;">
                        <a href="{$editUrl}&{$portletNamespace}guestbookId={$guestbook.guestbookId}"
                           class="btn btn-default" style="margin-right: 5px;">
                            <i class="icon-pencil"></i>{sp}Edit
                        </a>

                        <button id="btnDeleteGuestbook" class="btn btn-default" data-onclick="deleteGuestbook"
                                guestbookid="{$guestbook.guestbookId}">
                            <i class="icon-trash"></i>{sp}Delete
                        </button>
                    </td>
                </tr>
                {/foreach}
            </tbody>
        </table>
    </div>
{/template}